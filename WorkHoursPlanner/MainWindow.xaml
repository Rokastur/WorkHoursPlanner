<Window x:Class="WorkHoursPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Work Hours Planner"
        Height="450" Width="800">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <!-- Required Full Work Days -->
        <Label Grid.Row="0" Grid.Column="0" Content="Enter full days that are required to work for this time period:"
               VerticalAlignment="Center" />
        <TextBox x:Name="RequiredFullWorkDays" Grid.Row="0" Grid.Column="1" Width="150" Margin="10,0" />
        
        <!-- Hours worked so far -->
        <Label Grid.Row="1" Grid.Column="0" Content="Enter days worked so far"
               VerticalAlignment="Center" />
        <TextBox x:Name="DaysWorked" Grid.Row="1" Grid.Column="1" Width="150" Margin="10,0" />

        <!-- Hours worked so far -->
        <Label Grid.Row="2" Grid.Column="0" Content="Enter hours worked so far"
               VerticalAlignment="Center" />
        <TextBox x:Name="HoursWorked" Grid.Row="2" Grid.Column="1" Width="150" Margin="10,0" />
   
        <!-- Button -->
        <Button Grid.Row="3" Grid.Column="1"
                Content="Calculate"
                Width="100"
                Margin="10"
                Click="OnCalculateClick" />

        <!-- Output -->
        <Label Grid.Row="4" Grid.Column="0" Content="Average hours per day to work remaining:" VerticalAlignment="Center" />
        <TextBlock x:Name="ResultText" Grid.Row="4" Grid.Column="1" Margin="10,5" FontWeight="Bold" />
    </Grid>
</Window>